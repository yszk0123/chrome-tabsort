{
  "manifest_version": 2,
  "name": "TabSort",
  "version": "0.4.0",
  "description": "タブのソートとか",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "TabSort"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "options.html"
}
